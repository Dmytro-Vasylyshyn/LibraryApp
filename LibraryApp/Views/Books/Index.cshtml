@model IEnumerable<LibraryApp.Models.Book>

<h2>Список книг</h2>

<form method="get">
    <input type="text" name="searchTitle" placeholder="Назва книги" value="@ViewData["SearchTitle"]" />
    <input type="text" name="searchAuthor" placeholder="Автор" value="@ViewData["SearchAuthor"]" />
    <input type="text" name="searchGenre" placeholder="Жанр" value="@ViewData["SearchGenre"]" />
    <input type="submit" value="Пошук" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Рік</th>
            <th>Кількість примірників</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.Genre</td>
            <td>@item.Year</td>
            <td>@item.CopiesAvailable</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">Редагувати</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Видалити</a> |
                
                <!-- Borrow button -->
                <form asp-action="Borrow" asp-controller="Users" method="post" style="display:inline;">
                    <input type="hidden" name="bookId" value="@item.Id" />
                    <input type="hidden" name="userId" value="@ViewBag.UserId" /> 
                    <input type="submit" value="Взяти книгу" class="btn btn-primary" />
                    <input type="submit" value="Взяти книгу" class="btn btn-primary" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create")">Додати нову книгу</a>
